    <ImageView
        android:id="@+id/randomPlay"
        android:layout_width="200dp"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/leaderboard"
        android:layout_marginTop="29dp"
        android:background="@drawable/random_play"
        android:onClick="randomPlay" />

    <ImageView
        android:id="@+id/shuffleThis"
        android:layout_width="142dp"
        android:layout_height="61dp"
        android:layout_below="@+id/randomPlay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="@drawable/sigla2" />

    <ImageView
        android:id="@+id/leaderboard"
        android:layout_width="200dp"
        android:layout_height="125dp"
        android:layout_alignTop="@+id/shuffleThis"
        android:layout_marginRight="78dp"
        android:layout_marginTop="39dp"
        android:layout_toLeftOf="@+id/shuffleThis"
        android:background="@drawable/leaderboards"
        android:onClick="leaderB" />

    <ImageView
        android:id="@+id/achievements"
        android:layout_width="200dp"
        android:layout_height="125dp"
        android:layout_below="@+id/shuffleThis"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/shuffleThis"
        android:background="@drawable/achievements"
        android:onClick="achievements" />
    
    <ImageView 
        android:id="@+id/stanga_sus"
        android:visibility="gone"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/stanga_sus"
        android:layout_marginLeft="250dp"/>

    <ImageView
        android:id="@+id/playFriends"
        android:layout_width="200dp"
        android:layout_height="125dp"
        android:layout_above="@+id/leaderboard"
        android:layout_alignLeft="@+id/achievements"
        android:background="@drawable/play_with_friends"/>

    <ImageView
        android:id="@+id/dreapta_sus"
        android:visibility="gone"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_above="@+id/leaderboard"
        android:layout_toLeftOf="@+id/playFriends"
        android:src="@drawable/dreapta_sus" />

    <ImageView
        android:id="@+id/stanga_jos"
        android:visibility="gone"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/achievements"
        android:layout_toRightOf="@+id/randomPlay"
        android:src="@drawable/stanga_jos" />

    <ImageView
        android:id="@+id/dreapta_jos"
        android:visibility="gone"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/leaderboard"
        android:layout_alignLeft="@+id/dreapta_sus"
        android:layout_marginLeft="18dp"
        android:src="@drawable/dreapta_jos" />

</RelativeLayout>